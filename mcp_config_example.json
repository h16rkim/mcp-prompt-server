{
  "mcpServers": {
    "prompt-server-local": {
      "command": "node",
      "args": [
        "/path/to/mcp-prompt-server/dist/index.js"
      ],
      "transport": "stdio"
    },
    "prompt-server-docker": {
      "command": "docker",
      "args": [
        "run",
        "--rm",
        "-i",
        "--name", "mcp-prompt-server",
        "mcp-prompt-server:latest"
      ],
      "transport": "stdio"
    },
    "prompt-server-docker-compose": {
      "command": "docker-compose",
      "args": [
        "-f", "/path/to/mcp-prompt-server/docker-compose.yml",
        "run",
        "--rm",
        "mcp-prompt-server"
      ],
      "transport": "stdio"
    }
  }
}
