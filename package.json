{
  "name": "mcp-prompt-server",
  "version": "1.0.0",
  "description": "MCP服务器，提供预设的prompt工具来引导Claude执行任务",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "postbuild": "node scripts/copy-prompts.cjs",
    "start": "npm run build && node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "clean": "rimraf dist",
    "prebuild": "npm run clean",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:build": "./scripts/docker-build.sh",
    "docker:run": "docker run --rm -i mcp-prompt-server:latest",
    "docker:compose:up": "docker-compose up",
    "docker:compose:down": "docker-compose down",
    "docker:compose:build": "docker-compose build"
  },
  "keywords": [
    "mcp",
    "claude",
    "prompt",
    "ai"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "express": "^4.18.2",
    "fs-extra": "^11.2.0",
    "yaml": "^2.3.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "nodemon": "^3.0.3",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
